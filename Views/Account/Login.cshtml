@model MyCraft_Inventory.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/styles.css" asp-append-version="true">
</head>
<body>
    @* <header>
        <nav>
            <a href="/">MyCraft_Inventory</a> |
            <a href="/Home/Privacy">Privacy</a>
        </nav>
    </header> *@

    <div class="main-content">
        <div class="login-container">
            <h1>MyCraft Inventory</h1>
            <h2>Log In</h2>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                @Html.TextBoxFor(m => m.Username, new { @class = "form-input", placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                
                @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                
                <button type="submit" class="login-button">Login</button>
            }
        </div>
    </div>

    @* <footer>
        <p>&copy; 2024 - MyCraft_Inventory - <a href="/Home/Privacy">Privacy</a></p>
    </footer> *@
</body>
</html>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
        @{TempData["Message"] = null;}
    </script>
}