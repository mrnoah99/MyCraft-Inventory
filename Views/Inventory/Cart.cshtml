@* @model IEnumerable<MyCraft_Inventory.Models.ProductViewModel> *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="/css/orderItems.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/cart.css" asp-append-version="true">
</head>
<body>
    @* <header>
        <nav>
            <a href="/">MyCraft_Inventory</a> 
            <a href="/Home/Privacy">Privacy</a>
        </nav>
    </header> *@

    <div class="main-content">
        <h1 class="page-title">Cart</h1>

        <div class="cart-container">
            <div class="items-section">
                <h2>Items in Cart</h2>
                <div class="items-container">
                    @foreach (var item in Model)
                    {
                        <div class="item-card">
                            <strong>@item.Name</strong><br>
                            <span>Quantity: @item.Quantity</span><br>
                            <span class="item-desc"><em>@item.Description</em></span>
                        </div>
                    }
                </div>
            </div>

            <div class="payment-section">
                <h2>Payment Information</h2>
                @using (Html.BeginForm("ProcessPayment", "Cart", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.Label("First Name")
                        @Html.TextBox("FirstName", null, new { @class = "form-control", placeholder = "First Name" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Last Name")
                        @Html.TextBox("LastName", null, new { @class = "form-control", placeholder = "Last Name" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Card Number")
                        @Html.TextBox("CardNumber", null, new { @class = "form-control", placeholder = "Card Number" })
                    </div>

                    <div class="form-group">
                        @Html.Label("CVV")
                        @Html.TextBox("CVV", null, new { @class = "form-control", placeholder = "CVV" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Expiration Date")
                        @Html.TextBox("ExpirationDate", null, new { @class = "form-control", placeholder = "MM/YY" })
                    </div>

                    <button type="submit" class="btn btn-primary">Pay Now</button>
                }
            </div>
        </div>
    </div>
</body>
</html>