@model MyCraft_Inventory.Models.CartHandlerCompositeModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="/css/orderItems.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/cart.css" asp-append-version="true">
</head>
<body>
    @* <header>
        <nav>
            <a href="/">MyCraft_Inventory</a> 
            <a href="/Home/Privacy">Privacy</a>
        </nav>
    </header> *@

    <div class="main-content">
        <h1 class="page-title">Cart</h1>

        <div class="cart-container">
            <div class="items-section">
                <h2>Items in Cart</h2>
                <div class="items-container">
                    @foreach (var item in Model.CartList)
                    {
                        <div class="item-card">
                            <strong>@item.Name</strong><br>
                            <span>Quantity: @item.Quantity</span><br>
                            <span class="item-desc"><em>@item.Description</em></span>
                            <span>Price: $ @item.Price / Item</span>
                            @using (Html.BeginForm("RemoveFromCart", "Inventory", FormMethod.Post)) {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.CartRemove.Quantity, new { @type="number", @class="form-control", @placeholder="Enter quantity", @min=0, @max=item.Quantity })
                                @Html.ValidationMessageFor(m => m.CartRemove.Quantity, "", new { @class="text-danger" })
                                @Html.HiddenFor(m => item.Name)
                                @Html.HiddenFor(m => item.UserId)
                                <button type="submit" style="background-color: red;">Remove From Cart?</button>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="payment-section">
                <h2>Payment Information</h2>
                @using (Html.BeginForm("ProcessPayment", "Inventory", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Payment.FirstName)
                        @Html.TextBoxFor(m => m.Payment.FirstName, null, new { @class = "form-control", placeholder = "First Name" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Payment.LastName)
                        @Html.TextBoxFor(m => m.Payment.LastName, null, new { @class = "form-control", placeholder = "Last Name" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Payment.CardNumber)
                        @Html.TextBoxFor(m => m.Payment.CardNumber, null, new { @class = "form-control", placeholder = "Card Number" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Payment.CVV)
                        @Html.TextBoxFor(m => m.Payment.CVV, null, new { @class = "form-control", placeholder = "CVV" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Payment.ExpirationDate)
                        @Html.TextBoxFor(m => m.Payment.ExpirationDate, null, new { @class = "form-control", placeholder = "MM/YY" })
                    </div>

                    @Html.HiddenFor(m => m.CartList)

                    <button type="submit" class="btn btn-primary">Pay Now</button>
                }
            </div>
        </div>
    </div>
</body>
</html>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
        @{TempData["Message"] = null;}
    </script>
}